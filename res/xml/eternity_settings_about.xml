<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Eternity Changelog -->
    <Preference
        android:key="eternity_changelog"
        android:icon="@drawable/ic_changelog"
        android:title="@string/changelog_eternity_title"
        android:summary="@string/changelog_eternity_summary">
        <intent android:action="android.intent.action.MAIN"
             android:targetPackage="com.android.settings"
             android:targetClass="com.eternity.settings.fragments.about.ChangelogActivity"/>
    </Preference>

    <!-- Eternity Source -->
    <Preference
        android:key="eternity_source"
        android:icon="@drawable/ic_source"
        android:title="@string/eternity_source_title"
        android:summary="@string/eternity_source_summary" />

    <!-- Eternity Telegram -->
    <Preference
        android:key="eternity_telegram"
        android:icon="@drawable/ic_telegram"
        android:title="@string/eternity_telegram_title"
        android:summary="@string/eternity_telegram_summary" />

    <!-- Eternity Telegram Updates Channel -->
    <Preference
        android:key="eternity_telegram_channel"
        android:icon="@drawable/ic_telegram_channel"
        android:title="@string/eternity_telegram_channel_title"
        android:summary="@string/eternity_telegram_channel_summary" />

    <!-- Eternity Drill -->
    <Preference
        android:key="eternity_drill"
        android:icon="@drawable/ic_drill"
        android:title="@string/drill_title"
        android:summary="@string/drill_summary"
        android:fragment="com.eternity.settings.fragments.about.Drill" />
</PreferenceScreen>
